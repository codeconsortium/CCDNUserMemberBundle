{% extends 'CCDNUserMemberBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_member.member.list.layout_template %}

{% block title %}{{- truncDot('title.members' | trans({}, 'CCDNUserMemberBundle'), ccdn_user_member.seo.title_length) -}}{% endblock -%}


{% block body_content %}

	{%- spaceless -%}

	<section>
		
		<nav class="btn-toolbar center clearfix">
			{%- set route = app.request.attributes.get('_route') -%}

			<div class="btn-group">
				<a class="btn btn-mini{{- alpha is empty ? ' active':'' -}}" href="{{- path('ccdn_user_member_index') -}}">
					{{- 'generic.thead.filter.all' |trans({}, 'CCDNUserMemberBundle') -}}
				</a>

				{%- for letter in "A".."Z" -%}
					<a class="btn btn-mini{%- if alpha is defined -%}{{- (letter == alpha) ? ' active' : '' -}}{%- endif -%}" href="{{- path('ccdn_user_member_index', {'alpha': letter}) -}}">
						{{- letter -}}
					</a>
				{%- endfor -%}
			</div>
		</nav>
		
		{#{%- if pager.haveToPaginate -%}
			<div class="btn-toolbar">
				<nav class="span12 btn-right paginate">
			    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': pager_route }) -}}
				</nav>
			</div>
		{%- endif -%}
		#}
		
		<div class="btn-toolbar">
			<nav class="span12 btn-right paginate">
				{{- knp_pagination_render(pager) -}}
			</nav>
		</div>
		
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="left{%- if pager.isSorted('u.username') %} sorted{%- endif -%}">
						{{- knp_pagination_sortable(pager, 'generic.thead.username' | trans({}, 'CCDNUserMemberBundle'), 'u.username') -}}
					</th>
					<th class="center">{{- 'generic.thead.website' | trans({}, 'CCDNUserMemberBundle') -}}</th>
					<th class="center">{{- 'generic.thead.aim' | trans({}, 'CCDNUserMemberBundle') -}}</th>
					<th class="center">{{- 'generic.thead.msn' | trans({}, 'CCDNUserMemberBundle') -}}</th>
					<th class="center">{{- 'generic.thead.icq' | trans({}, 'CCDNUserMemberBundle') -}}</th>
					<th class="center">{{- 'generic.thead.yahoo' | trans({}, 'CCDNUserMemberBundle') -}}</th>
					<th class="center{%- if pager.isSorted('u.registeredDate') %} sorted{%- endif -%}">
						{{- knp_pagination_sortable(pager, 'generic.thead.member_since' | trans({}, 'CCDNUserMemberBundle'), 'u.registeredDate') -}}
					</th>
				</tr>
			</thead>
			<tbody>
				{%- for row, user in pager.getItems() -%}
					{#{%- if not user.locked or not user.enabled -%}#}
					{%- set member = create_profile(user) -%}
					<tr>
						<td class="left">
							{{- member.getProfilePath() |raw -}}
						</td>
						<td class="center">
							{%- if member.hasContactPoint('website') -%}
								<a href="{{- member.contactPoint('website') -}}" target="_blank">
									<i class="icon-globe"></i>
								</a>
							{%- endif -%}
						</td>
						<td class="center">
							{%- if member.hasContactPoint('aim') and member.isContactPointPublic('aim') -%}
								<a href="{{- (is_granted('ROLE_USER')) ? 'mailto:' ~ member.contactPoint('aim') : path(ccdn_user_member.login_route) -}}">
									<i class="icon-envelope"></i>
								</a>
							{%- endif -%}
						</td>
						<td class="center">
							{%- if member.hasContactPoint('msn') and member.isContactPointPublic('msn') -%}
								<a href="{{- (is_granted('ROLE_USER')) ? 'mailto:' ~ member.contactPoint('msn') : path(ccdn_user_member.login_route) -}}">
									<i class="icon-envelope"></i>
								</a>
							{%- endif -%}
						</td>
						<td class="center">
							{%- if member.hasContactPoint('icq') and member.isContactPointPublic('icq') -%}
								<a href="{{- (is_granted('ROLE_USER')) ? 'mailto:' ~ member.contactPoint('icq') : path(ccdn_user_member.login_route) -}}">
									<i class="icon-envelope"></i>
								</a>
							{%- endif -%}
						</td>
						<td class="center">
							{%- if member.hasContactPoint('yahoo') and member.isContactPointPublic('yahoo') -%}
								<a href="{{- (is_granted('ROLE_USER')) ? 'mailto:' ~ member.contactPoint('yahoo') : path(ccdn_user_member.login_route) -}}">
									<i class="icon-envelope"></i>
								</a>
							{%- endif -%}
						</td>
						<td class="center">
							{{- user.getRegisteredDate |date(ccdn_user_member.member.list.member_since_datetime_format) -}}
						</td>
					</tr>
				{%- else -%}
					<tr>
						<td class="center" colspan="8">
							{{- 'generic.thead.none' | trans({}, 'CCDNUserMemberBundle') -}}
						</td>
					</tr>
				{%- endfor -%}
			</tbody>
		</table>

		<div class="btn-toolbar">
			<nav class="span12 btn-right paginate">
				{{- knp_pagination_render(pager) -}}
			</nav>
		</div>
		{#
		{%- if pager.haveToPaginate -%}
			<div class="btn-toolbar">
				<nav class="span12 btn-right paginate">
			    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': pager_route }) -}}
				</nav>
			</div>
		{%- endif -%}
		#}
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
